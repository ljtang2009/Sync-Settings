{
    "editor.fontFamily": "'LXGW WenKai Mono','Sarasa Mono SC','Maple Mono NF CN'",
    "editor.renderWhitespace": "all",
    "editor.scrollbar.verticalScrollbarSize": 18,
    "editor.fontSize": 14,
    "editor.scrollbar.horizontalScrollbarSize": 18,
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "diffEditor.codeLens": true,
    "diffEditor.experimental.showMoves": true,
    "editor.minimap.autohide": "mouseover",
    "editor.inlineSuggest.showToolbar": "always",
    "editor.inlineSuggest.suppressSuggestions": true,
    "editor.suggest.preview": true,
    "editor.suggest.shareSuggestSelections": true,
    "workbench.list.horizontalScrolling": true,
    "workbench.list.smoothScrolling": true,
    "workbench.tree.indent": 10,
    "workbench.view.alwaysShowHeaderActions": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.wrapTabs": true,
    "window.confirmBeforeClose": "keyboardOnly",
    "explorer.fileNesting.enabled": true,
    "explorer.incrementalNaming": "smart",
    "search.actionsPosition": "auto",
    "search.collapseResults": "auto",
    "search.defaultViewMode": "tree",
    "search.showLineNumbers": true,
    "debug.confirmOnExit": "always",
    "debug.inlineValues": "on",
    "debug.showBreakpointsInOverviewRuler": true,
    "scm.defaultViewMode": "tree",
    "terminal.integrated.confirmOnExit": "hasChildProcesses",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorStyleInactive": "line",
    "terminal.integrated.enableVisualBell": true,
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.smoothScrolling": true,
    "remote.downloadExtensionsLocally": true,
    "security.workspace.trust.untrustedFiles": "open",
    "application.extensionMarketUrl": "https://marketplace.visualstudio.com/",
    "python.createEnvironment.contentButton": "show",
    "terminal.integrated.suggest.enabled": true,
    "workbench.iconTheme": "vscode-icons",
    "python.useEnvironmentsExtension": true
  
}